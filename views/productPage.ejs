<%- include('header');%>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-10 col-sm-offset-1 text-center">
			<h2><%=item.name%></h2>
			<img class="img-responsive centered" src="<%=item.picture%>">
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-12 col-sm-10 col-sm-offset-1">
			<p><%=item.short%></p>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
			<button data-id = "<%=item._id%>" class="addToCart btn btn-default">Add to Cart</button>
			<a href="/" class="btn btn-default" role="button">Continue Shoping</a>
		</div>
	</div>
</div>

<%- include('footer');%>